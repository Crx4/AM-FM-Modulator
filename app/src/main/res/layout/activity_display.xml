<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mcnvr.amfmmodulator.displayActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <!-- Logo Start-->
        <ImageView android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />
        <!-- Logo Ends-->
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:background="@color/colorWhite"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/dataSignalText"
                android:id="@+id/textViewShow"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textAlignment="center" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorSecondary"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <TableRow
                    android:layout_height="60dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@android:style/Widget.Button"
                        android:layout_weight="1"
                        android:text="@string/showDataWave"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:id="@+id/buttonShowDWave" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@android:style/Widget.Button"
                        android:layout_weight="1"
                        android:text="@string/showCWave"
                        android:padding="10dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/buttonShowCWave" />
                </TableRow>
                <TableRow
                    android:layout_height="60dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@android:style/Widget.Button"
                        android:text="@string/showMWave"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:id="@+id/buttonShowMWave" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@android:style/Widget.Button"
                        android:text="@string/showMixWave"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/buttonShowMixWave" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_gravity="center">
    </RelativeLayout>
</RelativeLayout>
