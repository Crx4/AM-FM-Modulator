<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" android:layout_height="wrap_content"
android:orientation="horizontal" android:gravity="center_horizontal"
android:padding="10dip" android:background="@android:color/transparent">

    <ProgressBar
        android:layout_alignParentRight="true" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="center_vertical"
        android:visibility="visible" android:paddingRight="10px"
        android:background="@android:color/transparent"
        android:indeterminateDrawable="@drawable/progressbar_style"
        android:indeterminate="false" />

    <TextView android:text="Preparing..." android:id="@+id/textViewDialog"
        android:layout_width="wrap_content"
        android:paddingRight="10dip" android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryLight"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
